<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/webLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spider"
    android:theme="@style/ThemeOverlay.PAM.FullscreenContainer"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="?attr/fullscreenTextColor"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/web1"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="@style/Widget.Theme.PAM.ButtonBar.Fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent" />

        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imgBtnBackContentDescription"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pam_left_arrow" />

        <ImageView
            android:id="@+id/imgPlayer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imgPlayerContentDescription"
            android:gravity="center"
            app:srcCompat="@drawable/spider" />

        <ImageView
            android:id="@+id/imgFly"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/fly" />

        <EditText
            android:id="@+id/txtPoints"
            android:layout_width="353dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:backgroundTint="@android:color/transparent"
            android:ems="15"
            android:gravity="right"
            android:inputType="number"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/imgAngrySpider"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/angryspider" />

        <TextView
            android:id="@+id/txtGameOver"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:text="@string/txtGameOver"
            android:textSize="100dp"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:clickable="true"/>

        <TextView
            android:id="@+id/txtGameOverPoints"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/txtPoints"
            android:visibility="invisible"
            android:textSize="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"/>


    </FrameLayout>

</FrameLayout>